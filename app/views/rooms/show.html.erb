<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2><%= "#{@user.name}さんとのチャット" %></h2>
      <div class="chat">
        <% if @messages.present? %>
          <% @messages.each do |m| %>
            <div class="chat_message">
              <%= m.body %><br>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="posts">
        <%= form_with model: @message do |f| %>
          <%= f.text_field :body, class: "form-text-field" %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <% f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>